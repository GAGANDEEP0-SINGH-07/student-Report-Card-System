{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch School Management",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/school_management.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Changed to workspaceFolder for general project execution
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe", // IMPORTANT: Verify this path for your system
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
           
        }
    ]
}